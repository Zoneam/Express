<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <h1>Students</h1>
    <ul>
      <% students.forEach(function(s) { %>
        <li class='list-group-item d-flex justify-content-between align-items-start <%= s.grade > 80 ? "list-group-item-success" : (s.grade > 60 && s.grade < 80) ? "list-group-item-warning" : "list-group-item-danger" %>'>
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%= s.student %></div>
              <%= " age:" + s.age %>
              <span class="badge bg-secondary <%= s.present ? 'bg-success' : 'bg-danger'%>"><%= s.present ? 'Present' : 'Absent'%></span>
            </div>
            <span class="badge bg-primary rounded-pill">Grade: - <%= s.grade %>%</span>
          </li>
      <% }); %>
    </ul>
  </body>
 
  </html>